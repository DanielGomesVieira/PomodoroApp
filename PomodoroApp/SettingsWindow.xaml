<Window x:Class="PomodoroApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="250" Width="300" KeyDown="Window_KeyDown"
        ResizeMode="NoResize"
        Icon="C:\projects\pomodoroTimer\PomodoroApp\PomodoroApp\assets\icon.png">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Working Time (minutes):" Margin="0 0 0 10"/>
            <TextBox x:Name="workingTimeTextBox" Width="100"/>

            <TextBlock Text="Break Time (minutes):" Margin="0 10 0 10"/>
            <TextBox x:Name="breakTimeTextBox" Width="100"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click" Cursor="Hand"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
    