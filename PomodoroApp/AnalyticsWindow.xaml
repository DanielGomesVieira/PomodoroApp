<Window x:Class="PomodoroApp.AnalyticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroApp"
        mc:Ignorable="d"
        Title="Analytics" Height="190" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock x:Name="minutesTodayBox" Text="Working minutes today:" Margin="0 0 0 10" HorizontalAlignment="Center"/>
            <TextBlock Text="Working minutes this week:" Margin="0 10 0 10" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                <Button Content="Back" Width="75" Margin="5" Click="BackButton_Click" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
